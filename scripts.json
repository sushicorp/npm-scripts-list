{
"build": "npm run build:js && npm run build:css",
"build:js": "browserify ${npm_package_config_src_js} > ${npm_package_config_dist_js}",
"build:js": "browserify ${npm_package_config_src_js} | uglifyjs -mc > ${npm_package_config_dist_js}",
"clean:rimraf": "rimraf dist/*",
"clean": "rm -rf dist/*",
"css:comb": "csscomb ${npm_package_config_src_css}",
"css:min": "csso ${npm_package_config_dist_css} ${npm_package_config_dist_css_min}",
"css:prefix": "autoprefixer -b 'last 2 versions' ${npm_package_config_src_css}",
"css:sass": "node-sass ${npm_package_config_src_scss} ${npm_package_config_src_css}",
"deploy:prod": "s3-cli sync ./dist/ s3://example-com/prod-site/",
"deploy:stage": "s3-cli sync ./dist/ s3://example-com/stage-site/",
"lint": "npm run lint:js && npm run lint:css",
"lint:scss": "scss-lint ${npm_package_config_src_scss}",
"lint:js": "jshint ${npm_package_config_src_js}",
"live-reload": "live-reload --port 9091 dist/",
"open": "opener http://localhost:9090",
"start": "node server.js",
"serve": "http-server -p 9090 dist/",
"serve": "browser-sync start --server dist/ --files dist/**/*",
"dev": "npm run serve & npm run watch",
"test": "mocha test/*.js",
"test:karma": "karma start --singleRun",
"test:stylestats": "stylestats ${npm_package_config_src_css}",
"test:tap": "tap test/*.js",
"watch": "npm run watch:js & npm run watch:css",
"watch:css": "catw ${npm_package_config_src_css} -o ${npm_package_config_dist_css} -v",
"watch:js": "watchify ${npm_package_config_src_js} -o ${npm_package_config_dist_js} -dv",
"watch:test": "karma start"
}
